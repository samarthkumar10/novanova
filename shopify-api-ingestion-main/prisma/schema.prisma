  id                  String   @id @default(uuid())
  name               String
  shopifyStore       String
  accessToken        String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  // Relations
  products           Product[]
  customers          Customer[]
  orders             Order[]
  users              User[]
  
  @@map("tenants")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@map("users")
}

